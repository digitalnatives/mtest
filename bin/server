#!/usr/bin/env coffee
{Server} = require(__dirname+'/../lib/server')
mdns        = require 'mdns'
nconf       = require 'nconf'

nconf.argv
  browsers:
    default: null

browsers =  nconf.get('browsers')
if browsers

  Server.browsers = browsers.split(",")
  Server.listen(4231)

  ad = mdns.createAdvertisement(mdns.tcp("http"), 4321)
  ad.start()

else
  console.log 'No browsers were specified!'